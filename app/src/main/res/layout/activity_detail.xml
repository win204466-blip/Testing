<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Banner Image -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/banner_height">

                <ImageView
                    android:id="@+id/ivBanner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:background="@color/background_elevated" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_banner_overlay" />

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="@dimen/spacing_sm"
                    android:background="@drawable/bg_circle_dark"
                    android:src="@drawable/ic_back"
                    android:contentDescription="Back"
                    app:tint="@color/text_primary" />

            </FrameLayout>

            <!-- Content Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_md"
                android:layout_marginTop="-60dp">

                <!-- Cover Image -->
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/ivCover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <!-- Title & Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_marginTop="68dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_lg"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="Attack on Titan" />

                    <TextView
                        android:id="@+id/tvStudio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_sm"
                        tools:text="MAPPA" />

                </LinearLayout>

            </LinearLayout>

            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/spacing_md"
                android:paddingTop="@dimen/spacing_md">

                <include layout="@layout/item_stat"
                    android:id="@+id/statScore" />

                <include layout="@layout/item_stat"
                    android:id="@+id/statEpisodes" />

                <include layout="@layout/item_stat"
                    android:id="@+id/statStatus" />

                <include layout="@layout/item_stat"
                    android:id="@+id/statFormat" />

            </LinearLayout>

            <!-- Genres -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupGenres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_md"
                app:chipSpacing="@dimen/spacing_xs" />

            <!-- Add to List Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToList"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="@dimen/spacing_md"
                android:text="@string/action_add_to_list"
                android:textAllCaps="false"
                app:cornerRadius="24dp"
                app:backgroundTint="@color/primary" />

            <!-- Synopsis -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                android:paddingHorizontal="@dimen/spacing_md"
                android:text="@string/label_synopsis"
                style="@style/TextSection" />

            <TextView
                android:id="@+id/tvSynopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_md"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_md"
                android:lineSpacingMultiplier="1.4"
                tools:text="Synopsis goes here..." />

            <!-- Characters Section -->
            <include
                layout="@layout/section_horizontal"
                android:id="@+id/sectionCharacters" />

            <!-- Recommendations Section -->
            <include
                layout="@layout/section_horizontal"
                android:id="@+id/sectionRecommendations"
                android:layout_marginBottom="@dimen/spacing_xl" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
